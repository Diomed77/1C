Процедура ПриНачалеВыбораЗначения(ИдентЭлемДиалога,ФлагСтандОбр)
	Если ИдентЭлемДиалога = "__Объект" Тогда
		Если ПустоеЗначение(__Объект) = 0 Тогда
			ФлагСтандОбр = 0;
			ОткрытьФорму(__Объект,,1);
		    Возврат;
		КонецЕсли;
		СписокВидов = СоздатьОбъект("СписокЗначений");
		СписокВидов.ДобавитьЗначение("Документ");
		СписокВидов.ДобавитьЗначение("Справочник");
		Значен = "";
		Поз = 0;
		Если СписокВидов.ВыбратьЗначение(Значен,,Поз,,2) = 1 Тогда
			Форма.__Объект.НазначитьТип(Значен);
		КонецЕсли;
	КонецЕсли;
КонецПроцедуры


