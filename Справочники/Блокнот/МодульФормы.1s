Процедура ПроверитьФайл()

	// 1. имя исходного файла
	Файл=НРЕГ(Наименование);
	Если Найти(Файл,".xml")=0 Тогда
		Предупреждение("Документ не отмечен как загруженный из файла *.xml!");
		Возврат;
	КонецЕсли;
	Файл=Лев(Файл,Найти(Файл,".xml")+4);
	Файл=СокрЛП(СтрЗаменить(Файл,"Загрузка документа",""));
	Пока Найти(Файл," ") <> 0 Цикл
		Файл = Сред(Файл,Найти(Файл," ")+1);
	КонецЦикла;
	
	Если ПустоеЗначение(Файл)=1 Тогда
		Предупреждение("Не обнаружен файл загрузки заявки");
		Возврат;
	КонецЕсли;

	
	ТекстЗапроса = "SELECT Счет.IDDOC [Ссылка $Документ.Счет]
	|						, $Счет.Клиент [Клиент $Справочник.Контрагенты]
	|				FROM $Документ.Счет AS Счет With (NOLOCK)
	|				INNER JOIN _1SJOURN AS Журнал With (NOLOCK) ON Счет.IDDOC = Журнал.IDDOC
	|				WHERE (Журнал.DATE_TIME_IDDOC >= :Нач)
	|						AND (Счет.$ОбщийРеквизит.Основание LIKE (:СтрокаПоиска))
	|";
	
	
	Запрос=СоздатьОбъект("ODBCRecordSet");
	Запрос.УстановитьТекстовыйПараметр("СтрокаПоиска","%"+Файл+"%");
	Запрос.УстановитьТекстовыйПараметр("Нач",__Дата);
	
	тЗаявки = СоздатьОбъект("ТаблицаЗначений");
	тЗаявки = Запрос.ВыполнитьИнструкцию(ТекстЗапроса);	
	
	Если ПустоеЗначение(тЗаявки)=1 Тогда
		// 2. где искать файл откуда загружали?
		Если ПустоеЗначение(Константа.КаталогОбменаECOD)=0 Тогда
			КаталогПоиска=СокрЛП(Константа.КаталогОбменаECOD)+"\import\edi\ORDER\Processed\";
			фс.УстТекКаталог(КаталогПоиска);
			Если ФС.СуществуетФайл(Файл)=1 Тогда
				Сообщить("Найден исходный файл: "+Файл);
				Если ФС.СуществуетФайл(СокрЛП(Константа.КаталогОбменаECOD)+"\import\Check_file.ert") <> 0 Тогда
					ОткрытьФорму("Отчет",Файл,СокрЛП(Константа.КаталогОбменаECOD)+"\import\Check_file.ert");
					Сообщить("Открываем файл "+КаталогПоиска+Файл);
					ЗапуститьПриложение(""+КаталогПоиска+Файл);
				КонецЕсли;
				
//				ЗапуститьПриложение(Файл);
				Возврат;
			Иначе
				Предупреждение("Не найден файл в каталоге обмена в формате ECOD!");
				Возврат;
			КонецЕсли;
		Иначе
			Предупреждение("Не задан каталог обмена в формате ECOD!");
			Возврат;
		КонецЕсли;
	ИначеЕсли тЗаявки.КоличествоСтрок()=1 Тогда
		промЗаявка = тЗаявки.ПолучитьЗначение(1,"Ссылка");
	Иначе
		рез=0;
		Если тЗаявки.ВыбратьСтроку(рез,"Выберите эл. заявкуу")=1 Тогда
			промЗаявка = тЗаявки.ПолучитьЗначение(рез,"Ссылка");
		КонецЕсли;
	КонецЕсли;
	
	Если ФС.СуществуетФайл(СокрЛП(Константа.КаталогОбменаECOD)+"\import\Check_file.ert") <> 0 Тогда
		ОткрытьФорму("Отчет",промЗаявка,СокрЛП(Константа.КаталогОбменаECOD)+"\import\Check_file.ert");
		КаталогПоиска=СокрЛП(Константа.КаталогОбменаECOD)+"\import\edi\ORDER\Processed\";
		Сообщить("Открываем файл "+КаталогПоиска+Файл);
		ЗапуститьПриложение(""+КаталогПоиска+Файл);
	КонецЕсли;
	
КонецПроцедуры

