Функция ВремяНач()
	конВремя = ТекущийЭлемент().ВремяСоб;
	конЧ = Число( Лев( конВремя, 2 ) );
	конМ = Число( Сред( конВремя, 4, 2 ) );
	конС = Число( Прав( конВремя, 2 ) );
	конСек = конЧ*3600+конМ*60+конС;
	
	С = конСек - ТекущийЭлемент().ДлительностьСоб;
	Ч = Цел( С / 3600 ); С = С - Ч*3600;
	М = Цел( С / 60 ); С = С - М*60;
	Возврат Прав( "00" + Ч, 2 )+":"+Прав( "00" + М, 2 )+":"+Прав( "00" + С, 2 );
КонецФункции
