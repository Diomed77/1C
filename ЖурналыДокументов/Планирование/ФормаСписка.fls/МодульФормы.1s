Функция ФорматВывода( парам )
	Если ПустоеЗначение( ТекущийДокумент ) = 1 Тогда Возврат ""; КонецЕсли; 
	Если парам = "Агент" Тогда
		Если ТекущийДокумент.Вид() = "ПланированиеПродаж" Тогда
			Возврат ТекущийДокумент.Агент;
		Иначе
			Возврат ТекущийДокумент.Отдел;
		КонецЕсли;
	КонецЕсли;
КонецФункции

Процедура ПриОткрытии()
	Если Пользователь.РазрПланирование = 0 Тогда
		Предупреждение( "Недостаточно полномочий пользователя!" );
		СтатусВозврата( 0 ); Возврат;
	КонецЕсли;
КонецПроцедуры