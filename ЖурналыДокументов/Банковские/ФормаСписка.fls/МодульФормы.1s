Функция КодКлиента()
    
	Если ПустоеЗначение(Покупатель)=0 Тогда
		Возврат Покупатель.Код;
	КонецЕсли;

	Возврат "";
	
КонецФункции



Функция ФорматВывода(парам)
	
	Если парам="КомментарийКлиента" Тогда
		Возврат ?(ПустоеЗначение(Покупатель)=0,Покупатель.КомментарийДляКредитаАгенту.Получить(РабочаяДата()),"");
	ИначеЕсли парам="ДатаОплатыДолга" Тогда
		Возврат ?(ПустоеЗначение(Покупатель)=0,Покупатель.ДатаОплатыДолга.Получить(РабочаяДата()),"");
	КонецЕсли;

КонецФункции